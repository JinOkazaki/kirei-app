<%= render "shared/header" %>

  <div class="posts">
    <p class="mypage-logo"><%= @nickname %>さんの投稿一覧</p>
    <% @posts.each do |post| %>
      <div class="post">
        <div class="top-post">
          <%= link_to "投稿者 #{post.user.nickname}", user_path(post.user.id), class:"user-name-post" %>
          <span><%= l post.created_at %></span>
        </div>
        <div class="main-post">
          <%= link_to(post_path(post.id),class:"mypage-link") do %>
          <%= image_tag post.image, class: 'image-main-post' %> 
          <% end %> 
        </div>
        <div class="footer-post">
          <%= link_to post.user.nickname, user_path(post.user.id), class:"user-name-post" %>
          <% if user_signed_in? %>
            <% if current_user.liked_by?(post) %>
              <%= link_to post_likes_path(post.id),method: :delete do %>
                <i class="fa fa-heart unlike-btn fa-2x"></i>
              <% end %>
            <% else %>
              <%= link_to post_likes_path(post.id),method: :post do %>
                <i class="fa fa-heart like-btn fa-2x"></i>
              <% end %>
            <% end %>
            <%= post.likes.count %>
          <% end %>
          <hr>
          <p><%= post.caption %></p>
          <hr>
          <p><%= "アイテムカテゴリー : #{post.category.name}"%></p>
        </div>
      </div>
    <% end %>
  <div>

  <div class="page-nation">
    <%= paginate @posts %>
  </div>

  <%= render "shared/footer" %>