<div class="container">

  <%= render "shared/header" %>
  
  <div class="wrapper">
    <div class="top-wrapper">
      <h1>Welcome To KIREI</h1>
      <h1>Make men more beautiful</h1>
      <p>ようこそKIREIへ</p>
      <p>KIREIは男性特化型コスメ情報共有サービスです</p>
      <p>有益な情報を皆様で共有していきましょう</p>
    </div>
  </div>
  <div class="posts">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="top-post">
          <%= link_to "投稿者 #{post.user.nickname}", user_path(post.user.id), class:"user-name-post" %>
          <span><%= l post.created_at %></span>
        </div>
        <div class="main-post">
          <%= link_to(post_path(post.id),class:"link-image") do %>
          <%= image_tag post.image, class: 'image-main-post' %> 
          <% end %>
        </div>
        <div class="footer-post">
          <%= link_to post.user.nickname, user_path(post.user.id), class:"user-name-post" %>
          <hr>
          <p class="caption"><%= post.caption %></p>
          <hr>
          <p><%= "アイテムカテゴリー : #{post.category.name}"%></p>
        </div>
      </div>
    <% end %>
  <div>

  <%= render "shared/footer" %>
  
  <%= link_to(new_post_path, class: "purchase-btn") do %>
    <span class="purchase-btn-text">投稿する</span>
    <%= image_tag "post-icon.png" , size: "180x50" ,class: "purchase-btn-icon" %>
  <% end %>

</div>