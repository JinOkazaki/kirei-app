<%= render "shared/header" %>

  <div class="posts">
    <p class="text-small"><%= link_to @user.followings.count, followings_user_path(@user) %> フォロー <%= link_to @user.followers.count, followers_user_path(@user) %> フォロワー</p>
    <% if @user.followed_by?(current_user) %>
      <%= link_to user_relationships_path(@user), method: :delete do %>
        <button class="btn btn-primary">フォロー中</button>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(@user), method: :post do %>
        <button class="btn btn-primary">フォローする</button>
      <% end %>
    <% end %>
    <p class="mypage-logo"><%= @user.nickname %>さんの投稿一覧</p>
    <% @posts.each do |post| %>
      <div class="post">
        <div class="top-post">
          <%= link_to "投稿者 #{post.user.nickname}", user_path(post.user.id), class:"user-name-post" %>
          <span><%= l post.created_at %></span>
        </div>
        <div class="main-post">
          <%= link_to(post_path(post.id),class:"mypage-link") do %>
          <%= image_tag post.image, class: 'image-main-post' %> 
          <% end %> 
        </div>
        <div class="footer-post">
          <div id="likes_buttons_<%= post.id %>">
            <%= render partial: "likes/like", locals: {post: post} %>
          </div>
          <hr>
          <p><%= post.caption %></p>
          <hr>
          <p><%= "アイテムカテゴリー : #{post.category.name}"%></p>
        </div>
      </div>
    <% end %>
  <div>

  <div class="page-nation">
    <%= paginate @posts %>
  </div>

  <%= render "shared/footer" %>