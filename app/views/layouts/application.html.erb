<!DOCTYPE html>
<html>
  <head>
    <title>KireiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Caveat">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kaushan+Script">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="header-left">
          <%= link_to "KIREI", root_path, class: "kirei" %>
        </div>
        <div class="header-right">
          <% if user_signed_in? %>
            <%= link_to current_user.nickname, "#", class: "user-nickname" %>
            <%= link_to 'LogOut', destroy_user_session_path, method: :delete, class: "logout" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "login" %>
            <%= link_to "SignUp", new_user_registration_path, class: "sign-up" %>
          <% end %>
        </div>
      </div>
    </header>
    
      <%= yield %>

    <footer>
      <p>Copyright Â© KIREI All Rights Reserved.</p>
    </footer>

  </body>
</html>
