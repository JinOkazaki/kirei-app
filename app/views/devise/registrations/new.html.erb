
<div id="particles-js"></div>
  <%= render partial: "shared/header" %>
  <div id="container">
    <div class="registrations">
      <h1 class="registrations-logo">SignUp</h1>
      <div class="registration">
        <%= form_with model: @user, url: user_registration_path, class: "new-users", local: true do |f| %>
          <%= render "shared/error_messages", model: f.object %>
          <div class="registration-field">
            <%= f.label :ニックネーム %><br/>
            <%= f.text_field :nickname, placeholder: "例)太朗、Taro", class: "intext" %>
          </div>
          <div class="registration-field">
            <%= f.label :年齢 %><br/>
            <%= f.text_field :age, placeholder: "例)20", class: "intext" %>
          </div>
          <div class="registration-field">
            <%= f.label :性別 %><br/>
            <%= f.collection_select(:gender_id, Gender.all, :id, :name, {prompt: "---"}, class: "intext gender") %> 
          </div>
          <div class="registration-field email-field">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: "例)kirei@kirei.com", class: "intext" %>
          </div>
          <div class="registration-field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上) </em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off", placeholder: "半角英数含めて", class: "intext" %>
          </div>
          <div class="registration-field">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認用", class: "intext" %>
          </div>
          <div class="actions">
            <%= f.submit "SignUp", class:"signup-btn" %>
          </div>
        <% end %>
      </div>
    </div> 
  </div>
<%= render partial: "shared/footer" %>