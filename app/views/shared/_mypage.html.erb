<div class="post">
  <div class="top-post">
    <%= link_to "投稿者 #{post.user.nickname}", user_path(post.user.id), class:"user-name-post" %>
    <span><%= l post.created_at %></span>
  </div>
  <div class="main-post">
    <%= link_to(post_path(post.id),class:"link-image") do %>
    <%= image_tag post.image, class: 'image-main-post' %> 
    <% end %> 
  </div>
  <div class="footer-post">
    <div id="likes_buttons_<%= post.id %>">
      <%= render partial: "likes/like", locals: {post: post} %>
    </div>
    <hr>
    <p><%=safe_join(post.caption.split("\n"),tag(:br))%></p>
    <hr>
    <p><%= "アイテムカテゴリー : #{post.category.name}"%></p>
  </div>
</div>